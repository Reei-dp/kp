<Page x:Class="kursovaya.Adminstration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:kursovaya"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      WindowWidth="1920" WindowHeight="1080"
      Title="Adminstration">

    <Grid Background="Azure">
        <StackPanel  VerticalAlignment="Center" Orientation="Vertical" Width="900">
            <Button Margin="0,0,0,30"  FontSize = "40" Height="70" Click="Change_Teacher" Content="Изменить данные в таблице преподователей"/>
            <Button Margin="0,0,0,30" FontSize = "40" Height="70" Click="Change_Student" Content="Изменить данные в таблице студентов"/>
            <Button FontSize = "40" Height="70" Click="Exit" Content="Выйти"/>
        </StackPanel>        
    </Grid>
</Page>
